<h1><%=h @event.name %></h1>
<p>
  <b>Description:</b>
  <%=h @event.description %>
</p>

<p>
  <b>Date:</b>
  <%=h @event.date %>
</p>

<p>
  <b>Start:</b>
  <%=h @event.start %>
</p>

