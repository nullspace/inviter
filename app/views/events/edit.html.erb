<h1>Editing event</h1>

<%= error_messages_for :event %>

<% form_for(@event) do |f| %>
<p>
  <b>Name</b><br />
  <%= f.text_field :name %>
</p>

<p>
  <b>Description</b><br />
  <%= f.text_area :description %>
</p>

<p>
  <b>Seed</b><br />
  <%= f.text_field :seed %>
</p>

<p>
  <b>Date</b><br />
  <%= date_select(f,:date,:start_year => Time.now.year, :default => @event.date )%>
</p>

<p>
  <b>Start</b><br />
  <%= time_select(f, :start, :default => @event.start ) %>
</p>

<p>
  <b>Location</b><br />
  <%= collection_select("event", "location_id", @locations, "id", "name") %>

</p>
  
<p>
  <%= f.submit "Update" %>
</p>
<% end %>



<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
