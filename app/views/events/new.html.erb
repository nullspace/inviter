<h1>New event</h1>

<%= error_messages_for :event %>

<% form_for(@event) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <b>Seed, any (random) string for security - can leave as is</b><br />
    <%= f.text_field :seed %>
  </p>

  <p>
    <b>Date</b><br />
    <%= f.date_select :date %>
  </p>

  <p>
    <b>Start</b><br />
    <%= f.time_select :start %>
  </p>

  <p>
    <b>Location</b><br />
    <%= collection_select("event", "location_id", @locations, "id", "name") %>

  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>
